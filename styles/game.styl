@import 'reset.styl';
@import 'controls.styl';

html, body {
	height: 100%;
	width: 100%;
	overflow: hidden;
}

body {
	color: #aaa;
	background: #333;
	cursor: default;

	> .wrapper > #content > div {
		position: absolute;

		padding: 10px;

		border: 1px solid #000;
		box-shadow: 0 6px #000;

		background: #444;

		border-radius: 2px;

		&:not(.visible) {
			&, img, input, button, span {
				opacity: 0;
				.no-js & { opacity: 1; }
			}
		}

		&.login {
			top: 50%;
			left: 50%;

			width: 222px;
			margin: -38px 0 0 -100px;

			input {
				width: 200px;
				margin: 0 0 2px;
			}

			button {
				float: right;
				margin: 5px 0 0;
			}
		}

		&.clock {
			top: 20px;
			left: 20px;
			right: 430px;
			height: 36px;

			display: -webkit-box;
			display: -moz-box;
			-webkit-box-orient: horizontal;
			-moz-box-orient: horizontal;
			-webkit-box-align: stretch;
			-moz-box-align: stretch;

			span {
				font-family: monospace;
				position: relative;

				&.display { top: -1px; }

				&.flow { top: -5px; }
			}

			input {
				-webkit-box-flex: 1;
				-moz-box-flex: 1;
				display: block;

				vertical-align: middle;
				margin: 0 10px;
				width: 350px;
			}
		}

		&.finance {
			top: 20px;
			right: 20px;
			width: 400px;
			height: 36px;
		}

		&.map {
			top: 72px;
			left: 20px;
			right: 230px;
			bottom: 26px;
			overflow: auto;
			padding: 0;

			#map {
				position: absolute;
				width: 100%;
				height: auto;

				img {
					width: 100%;
					margin-bottom: -4px;
				}

				div.region {
					position: absolute;
					width: 200px;
					margin: -12px 0 0 -100px;
					text-align: center;

					button {
						position: relative;
						z-index: 1;
					}

					&.af    { top: 39%; left: 54%; }

					&.an    { top: 94%; left: 50%; }

					&.as    { top: 30%; left: 68%; }
					&.as-cn { top: 28%; left: 77%; }
					&.as-jp { top: 27%; left: 89%; }

					&.eu    { top: 21%; left: 60%; }
					&.eu-gb { top: 19%; left: 49%; }
					&.eu-ru { top: 15%; left: 76%; }

					&.na    { top: 20%; left: 30%; }
					&.na-ca { top: 15%; left: 18%; }
					&.na-mx { top: 37%; left: 22%; }
					&.na-us { top: 27%; left: 22%; }

					&.oc    { top: 63%; left: 87%; }
					&.oc-ps { top: 0; left: 0; }

					&.sa    { top: 54%; left: 34%; }

					&.sp-ma { top: 0; left: 0; }
					&.sp-mo { top: 0; left: 0; }
					&.sp-or { top: 0; left: 0; }
					&.sp-rb { top: 0; left: 0; }
				}
			}
		}

		&.stats {
			top: 72px;
			right: 20px;
			width: 200px;
			height: 80px;
		}

		&.research {
			top: 168px;
			right: 20px;
			width: 200px;
			bottom: 26px;
		}
	}
}
